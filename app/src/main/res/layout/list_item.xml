<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">
    
    <TextView
        android:id="@+id/news_item_title"
        style="@style/NewsItemTitleStyle" />

    <TextView
        android:id="@+id/news_item_section_name"
        style="@style/NewsItemSectionStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/news_item_author_name"
            style="@style/NewsItemSecondaryTextStyle"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/news_item_date_published"
            style="@style/NewsItemSecondaryTextStyle"
            android:layout_width="match_parent"
            android:gravity="right" />
    </LinearLayout>
</LinearLayout>